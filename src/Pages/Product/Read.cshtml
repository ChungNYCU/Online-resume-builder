@page "{id}"
@using ContosoCrafts.WebSite.Services
@inject JsonFileProductService ProductService
@model ContosoCrafts.WebSite.Pages.Product.ReadModel

@{
    ViewData["Title"] = "Read page";
}

<h1>Read</h1>

<div class="container">
    <h5 class="title" id="productTitle">@Model.Product.FullName</h5>

    <img class="card-img" src='@Model.Product.Photo' alt='Image for @Model.Product.FullName'>

    <h5 class="title" id="productTitle">Awards</h5>
    <p>@Model.Product.Awards</p><br>

    <p class="card-text">About me: @Model.Product.Description</p>

    @foreach (var work in @Model.WorkExperience)
    {
        <div>
            <div>@work.Employer</div>
            <div>@work.Title</div>
            <div>@work.StartDate</div>
            <div>@work.EndDate</div>
            <div>@work.RoleDescription</div>
        </div>
    }

</div>

<br />
<br />

<div class="row">
    <a asp-page="Update" asp-route-id="@Model.Product.Id" class="btn btn-primary">Update</a> &nbsp; &nbsp;
    <a asp-page="Delete" asp-route-id="@Model.Product.Id" class="btn btn-danger">Delete</a>
</div>
