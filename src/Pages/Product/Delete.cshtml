@page "{id}"
@using ContosoCrafts.WebSite.Services
@inject JsonFileProductService ProductService
@model ContosoCrafts.WebSite.Pages.Product.DeleteModel

@{
    ViewData["Title"] = "Delete page";
}

<div class="container bg-light padstb10">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @Html.HiddenFor(x => x.Product.Id)

        <div class="form-group">
            <label class="control-label">Full Name</label>
            <input asp-for="Product.FullName" class="form-control" disabled />
        </div>

        <div class="form-group">
            <label class="control-label">Introduction</label>
            <input asp-for="Product.AboutMe" class="form-control" disabled />
        </div>

        <div class="form-group">
            <label class="control-label">Linkedin URL</label>
            <input asp-for="Product.LinkedinUrl" class="form-control" disabled />
        </div>

        <div class="form-group">
            <label asp-for="Product.Photo" class="control-label"></label>
            <input asp-for="Product.Photo" class="form-control" disabled />
        </div>

        <div class="form-group">
            <label asp-for="Product.Email" class="control-label"></label>
            <input asp-for="Product.Email" class="form-control" disabled />
        </div>

        <div class="form-group">
            <label asp-for="Product.Phone" class="control-label"></label>
            <input asp-for="Product.Phone" class="form-control" disabled />
        </div>

        <div class="form-group">
            <label asp-for="Product.Address" class="control-label"></label>
            <input asp-for="Product.Address" class="form-control" disabled />
        </div>

        <h1>Confirm Delete of this item</h1>
        <div class="form-group">
            <label asp-for="Product.Password" class="control-label"></label>
            <input asp-for="Product.Password" class="form-control" value="Enter your password" />
            <span asp-validation-for="Product.Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-primary" />
        </div>
    </form>

</div>

@*Received HTML code from server*@
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}