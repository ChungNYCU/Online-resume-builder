@page "{id}"
@using ContosoCrafts.WebSite.Services
@inject JsonFileProductService ProductService
@model ContosoCrafts.WebSite.Pages.Product.DeleteModel

@{
    ViewData["Title"] = "Delete page";
}

<h1>Delete</h1>

<div class="container">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @Html.HiddenFor(x => x.Product.Id)

        <div class="form-group">
            <label asp-for="Product.FullName" class="control-label"></label>
            <input asp-for="Product.FullName" class="form-control" disabled />
        </div>

        <div class="form-group">
            <label asp-for="Product.AboutMe" class="control-label"></label>
            <input asp-for="Product.AboutMe" class="form-control" disabled />
        </div>

        <div class="form-group">
            <label asp-for="Product.LinkedinUrl" class="control-label"></label>
            <input asp-for="Product.LinkedinUrl" class="form-control" disabled />
        </div>

        <div class="form-group">
            <label asp-for="Product.Photo" class="control-label"></label>
            <input asp-for="Product.Photo" class="form-control" disabled />
        </div>

        <h1>Confirm Delete of this item</h1>

        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-primary" />
        </div>
    </form>

</div>

@*Received HTML code from server*@
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}